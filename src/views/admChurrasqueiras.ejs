<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/navFooter.css">
<title>Administração</title>
</head>

<body>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
    integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
    crossorigin="anonymous"></script>

  <header>
    <nav class="navbar">
      <div class="titulo">
        <a href="/admPagPrincipal/<%=user[0].IDUsuario%>">
          <h1><span>Clube</span></h1> <strong>
            <h1>Bosch</h1>
          </strong></h1>
        </a>
      </div>
      <div class="funcoes">
        <div class="minhasReservas">
          <a href="/admReservas/<%=user[0].IDUsuario %>">
            <h5>Reservas</h5>
          </a>
        </div>
        <div class="user d-flex gap-2">
          <h5>Administrador: <%=user[0].Nome %>,
          </h5>
          <h5> Edv: <%=user[0].EDV%>
          </h5>
        </div>
        <a class="tema" onclick="mudarTema()">
          <img src="/img/moon.png" id="moon" alt="" >
          <img src="/img/sun.png" alt="" id="sun" style="display: none;" >
      </a>
      </div>
    </nav>
  </header>

  <main>
    <div class="modal fade" id="deletar">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" id="modalExcluirChurras">
          <div class="modal-header">
            <h5 class="modal-title">Confirmar exclusão</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p>Tem certeza que deseja excluir a churrasqueira? </p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <form action="" method="post" id="excluirChurrasqueira">
              <button type="submit" class="btn btn-danger mudarCor">Confirmar</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="editar">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" >
          <div class="modal-header">
            <h5 class="modal-title">EDITAR</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form action="" id="editarChurrasqueira" method="post">
              <div class="mb-3">
                <label for="exampleInputText" class="form-label poppins-regular-form">Nome:</label>
                <input type="text" class="form-control" id="nomeChurrasqueiraModal" name="nomeChurrasqueira">
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label poppins-regular-form">Capacidade:</label>
                <input type="number" class="form-control" id="capacidadeChurrasqueiraModal" name="capacidadeChurrasqueira">
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary mudarCor">Confirmar</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
      aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content" id="modalAddChurras">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="staticBackdropLabel">Insira os dados</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form action="/admChurrasqueiras/<%=user[0].IDUsuario%>" method="post">
              <div class="mb-3">
                <label for="exampleInputText" class="form-label poppins-regular-form">Nome:</label>
                <input type="text" class="form-control" id="nomeChurrasqueira" name="nomeChurrasqueira" required>
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label poppins-regular-form">Capacidade:</label>
                <input type="number" class="form-control" id="capacidadeChurrasqueira" name="capacidadeChurrasqueira" required>
              </div>
              <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-cadastro btn-success w-75 poppins-regular-form">Cadastrar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <% if(erro){ %>
      <script>
          alert("<%=erro%>");
      </script>
  <% } %>

    <div class="container">
      <div class="row mb-5">
        <div class="d-flex ">
          <button name="cadastrar" type="button"
            class="btn btn-success w-25 d-flex align-items-center justify-content-center" data-bs-toggle="modal"
            data-bs-target="#staticBackdrop">
            <h4 class="mb-0 ">Nova churrasqueira</h4>
          </button>
        </div>
      </div>
    </div>
    <div class="container">
      <table class="table table-striped" id="tabela">
        <thead>
          <tr class="poppins-regular-form">
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            <th scope="col">Capacidade</th>
            <th scope="col">Ação</th>
          </tr>
        </thead>
        <% for(let i=0; i < churrasqueira.length; i++) { %>
          <tbody>
            <tr class="poppins-regular-form">
              <th id="idLocal<%=churrasqueira[i].IDLocal %>" scope="row">
                <%=churrasqueira[i].IDLocal %>
              </th>
              <td id="nomeLocal<%=churrasqueira[i].IDLocal %>">
                <%=churrasqueira[i].Nome %>
              </td>
              <td id="capacidadeLocal<%=churrasqueira[i].IDLocal %>">
                <%=churrasqueira[i].Capacidade %>
              </td>
              <td>
                <button class="icon-button" data-bs-toggle="modal" data-bs-target="#editar"
                  onclick="editarChurrasqueira('<%=churrasqueira[i].IDLocal%>', '<%=user[0].IDUsuario%>')">
                  <img src="/img/iconEdit.png" alt="Edit Icon" class="icon">
                </button>
                <button class="icon-button" data-bs-toggle="modal" data-bs-target="#deletar"
                  onclick="excluirChurrasqueira('<%=churrasqueira[i].IDLocal%>', '<%=user[0].IDUsuario%>')">
                  <img src="/img/iconDelete.png" alt="Delete Icon" class="icon">
                </button>
              </td>
            </tr>
          </tbody>
          <% } %>
      </table>
    </div>
  </main>
  <footer class="fixed-bottom" style="background-color: transparent;">
    <a id="btnSair" href="/">
      <button  style="width: 80px;" class="btn btn-danger">
        Sair
      </button>
    </a>
  </footer>
  <script src="/js/script.js"></script>
</body>